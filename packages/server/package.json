{
  "name": "codestar-streams-server",
  "version": "0.0.0",
  "description": "Codestar Streams Server",
  "main": "index.js",
  "engines": {
    "node": "~11.3.0"
  },
  "scripts": {
    "build": "babel src -d build",
    "serve": "npm run build && node build/index.js",
    "start": "nodemon --watch src/index.js --exec \"npm run serve\"",
    "heroku-local-web": "heroku local web",
    "deploy": "git push heroku master",
    "test": "echo \"No test specified\" && exit 0",
    "remove-packages": "rm -rf node_modules package-lock.json",
    "install-packages": "npm install",
    "lint": "npm-run-all lint:scss lint:js",
    "lint:scss": "stylelint src/**/*.scss --fix",
    "lint:js": "eslint src/**/*.js --fix",
    "lint:staged": "lint-staged",
    "ci": "npm-run-all lint build test"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.0",
    "@babel/preset-env": "^7.1.6",
    "nodemon": "^1.18.7",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "dotenv": "^6.1.0",
    "express": "^4.16.4",
    "uuid": "^3.3.2"
  }
}
